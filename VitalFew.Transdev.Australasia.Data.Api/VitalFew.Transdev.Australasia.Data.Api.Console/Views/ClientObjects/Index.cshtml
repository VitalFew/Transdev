@model VitalFew.Transdev.Australasia.Data.Core.Database.VF_API_CATALOG_CLIENTS

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Client EndPoints</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.TRANSDEV_ID)
        @Html.HiddenFor(model => model.CLIENT_ID)

        <div class="form-group">
            @Html.Label("Client Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CLIENT_NAME, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                @Html.ValidationMessageFor(model => model.CLIENT_NAME, "", new { @class = "text-danger" })
            </div>
        </div>

    </div>

    <br />

    <p>
        <a href="@Url.Action("Add","ClientObjects" ,  new { id= Model.CLIENT_ID } )" class="btn btn-primary btn-sm">Create a New Endpoint</a>
    </p>

    @Html.Action("Get", "ClientObjects", new { @id = Model.CLIENT_ID })
}


@section scripts
{
    <script language="javascript">

        $(document).ready(function () {
            $('#objectGrid').dataTable({
                "pagingType": "full_numbers"
            });
        });

    </script>
}